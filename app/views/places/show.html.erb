<h1>New place<h1>

<div class="place">
<li><%= @place.name %></li>
<li><%= @place.facilities %></li>
<li><%= @place.location %></li>
</div>

<div class="placecontrols">
  <%= link_to 'Edit event', edit_place_path(@place) %>
  <%= link_to 'Delete event', @place, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
